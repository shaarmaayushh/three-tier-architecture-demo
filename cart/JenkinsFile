pipeline{
  agent{
    docker{
      image 'node:14'
      args '-u root'
    }
  }

  stages{
    stage('Build'){
      steps{
        sh 'npm install'
      }
  }
    stage('Test'){
      steps{
        sh 'npm test'
      }
    }
    stage('Deploy'){
      steps{
        sh 'npm run build'
      }
    }
}
