pipeline{
  agent{
    docker{
      image 'node:14'
      args '-u root'
    }
  }

  stages{
    stage('Build'){
      steps{
        dir('/var/lib/jenkins/workspace/SelfMade/cart') {
                    // Run npm test
                    sh 'npm test'
        }
      }
    }
    stage('Test'){
      steps{
        sh 'npm test'
      }
    }
    stage('Deploy'){
      steps{
        sh 'npm run build'
      }
    }
  }
}
